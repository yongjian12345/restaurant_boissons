<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/travail_nom_label" />

    <EditText
        android:id="@+id/travail_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/travail_nom_hint"
        android:inputType="text" />

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/travail_details_label" />

    <Button
        android:id="@+id/travail_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/travail_termine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/travail_termine_label" />
</LinearLayout>
